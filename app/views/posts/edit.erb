<h1>Edit Post!</h1>

<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content, "Really Good Content" %>
  <%= f.text_field :content %>
  <%= f.label :blogger %>
  <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
  <%= f.label :destination %>
  <%= f.collection_select :destination_id, Destination.all, :id, :full_name %>

  <%= f.submit %>
<% end %>